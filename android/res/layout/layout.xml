<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".AndroidLauncher">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/startGame"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="150dp"
                android:background="@drawable/button_border"
                android:elevation="5dp"
                android:stateListAnimator="@null"
                android:text="@string/startButton"
                android:textColor="#ffff"
                android:textSize="18sp"
                android:textStyle="italic"
                android:translationZ="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />




            <Button
                android:id="@+id/chat"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_below="@id/startGame"
                android:layout_marginStart="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_border"
                android:elevation="5dp"
                android:stateListAnimator="@null"
                android:text="@string/chatButton"
                android:textColor="#ffff"
                android:textSize="18sp"
                android:textStyle="italic"
                android:translationZ="5dp" />

            <Button
                android:id="@+id/howToPlay"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_below="@id/chat"
                android:layout_marginStart="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_border"
                android:elevation="5dp"
                android:stateListAnimator="@null"
                android:text="@string/howToPlayButton"
                android:textColor="#ffff"
                android:textSize="18sp"
                android:textStyle="italic"
                android:translationZ="5dp" />

            <Button
                android:id="@+id/aboutUs"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_below="@id/howToPlay"
                android:layout_marginStart="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_border"
                android:elevation="5dp"
                android:stateListAnimator="@null"
                android:text="@string/aboutUsButton"
                android:textColor="#ffff"
                android:textSize="18sp"
                android:textStyle="italic"
                android:translationZ="5dp" />

            <Button
                android:id="@+id/signOutBtn"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_below="@id/aboutUs"
                android:layout_marginStart="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_border"
                android:elevation="5dp"
                android:stateListAnimator="@null"
                android:text="@string/sign_out"
                android:textColor="#ffff"
                android:textSize="18sp"
                android:textStyle="italic"
                android:translationZ="5dp" />

            <Button
                android:id="@+id/secondButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="200dp"
                android:layout_marginTop="350dp"
                android:text="Go to other activity"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.65" />
            <Button
                android:id="@+id/adminButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="370dp"
                android:layout_marginTop="350dp"
                android:text="Admin"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.65" />

            <Button
                android:id="@+id/sharebtn"
                style="@style/com_facebook_button_share"
                android:layout_width="73dp"
                android:layout_height="28dp"
                android:layout_below="@+id/signOutBtn"
                android:layout_alignParentStart="true"
                android:layout_marginStart="183dp"
                android:layout_marginTop="-33dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.527" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>