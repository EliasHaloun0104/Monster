<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".ScreenTimeActivity">


    <TextView
        android:id="@+id/screentime_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="@string/screen_time_usage"
        android:textColor="#fff"
        android:textSize="40sp"
        android:textStyle="italic" />


    <TextView
        android:id="@+id/screentime_daily"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/screentime_title"
        android:layout_marginStart="10dp"
        android:layout_marginTop="100dp"
        android:text="@string/today"
        android:textColor="#fff"
        android:textSize="28sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/screentime_todayTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/screentime_title"
        android:layout_marginStart="40dp"

        android:layout_marginTop="104dp"
        android:layout_toEndOf="@id/screentime_monthly"
        android:text="00h : 00m : 00s"
        android:textColor="#fff"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/screentime_monthly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/screentime_daily"
        android:layout_marginStart="10dp"
        android:layout_marginTop="45dp"
        android:text="This month:"
        android:textColor="#fff"
        android:textSize="28dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/screentime_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/screentime_daily"
        android:layout_marginStart="40dp"
        android:layout_marginTop="50dp"
        android:layout_toEndOf="@id/screentime_monthly"
        android:text="00h : 00m : 00s"
        android:textColor="#fff"
        android:textSize="28sp" />


    <TextView
        android:id="@+id/screentime_yearly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/screentime_monthly"
        android:layout_marginStart="10dp"
        android:layout_marginTop="45dp"
        android:text="This year :"
        android:textColor="#fff"
        android:textSize="28dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/screentime_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/screentime_monthly"
        android:layout_marginStart="40dp"
        android:layout_marginTop="50dp"
        android:layout_toEndOf="@id/screentime_monthly"
        android:text="00h : 00m : 00s"
        android:textColor="#fff"
        android:textSize="28sp" />

    <Button
        android:id="@+id/screentime_updateBtn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/screentime_yearly"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="30dp"
        android:background="#fff"
        android:elevation="4dp"
        android:padding="10dp"
        android:text="@string/update"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold" />


</RelativeLayout>