<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    >
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/prof_image"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/defaul_av_imag" />

    <TextView
        android:id="@+id/prof_userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/prof_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/user_name"
        android:textColor="#fff"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/prof_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/prof_userName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="#fff"
        android:text="@string/profile_status"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/prof_sendReq"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/prof_status"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:background="#fff"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:paddingEnd="10dp"
        android:paddingBottom="5dp"
        android:text="@string/add_friend"
        android:elevation="4dp"
        android:textColor="@color/colorPrimary" />
    <Button
        android:id="@+id/prof_declineReq"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/prof_sendReq"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="#fff"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:paddingEnd="10dp"
        android:paddingBottom="5dp"
        android:text="@string/decline_request"
        android:elevation="4dp"
        android:textColor="@color/colorPrimary"
        android:layout_marginBottom="40dp"/>

</RelativeLayout>